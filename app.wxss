/* 全局样式 - 喜番喜剧 */

/* === 重置默认样式 === */
page {
  height: 100%;
  background-color: #F8F9FA;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  color: #2C3E50;
  line-height: 1.6;
}

/* === 颜色变量 === */
.primary-color { color: #FF6B6B; }
.secondary-color { color: #4ECDC4; }
.accent-color { color: #FFD93D; }
.text-color { color: #2C3E50; }
.text-light { color: #7F8C8D; }
.bg-primary { background-color: #FF6B6B; }
.bg-secondary { background-color: #4ECDC4; }
.bg-accent { background-color: #FFD93D; }
.bg-light { background-color: #F8F9FA; }
.bg-white { background-color: #FFFFFF; }

/* === 通用布局 === */
.container {
  padding: 20rpx;
  background-color: #F8F9FA;
  min-height: 100vh;
}

.flex {
  display: flex;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-start {
  display: flex;
  align-items: flex-start;
}

.flex-end {
  display: flex;
  align-items: flex-end;
}

.flex-wrap {
  flex-wrap: wrap;
}

.flex-1 {
  flex: 1;
}

/* === 卡片样式 === */
.card {
  background: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 20rpx;
  overflow: hidden;
}

.card-content {
  padding: 24rpx;
}

.card-header {
  padding: 24rpx 24rpx 12rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.card-footer {
  padding: 12rpx 24rpx 24rpx;
  background-color: #FAFAFA;
}

/* === 按钮样式 === */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  cursor: pointer;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.btn-primary {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E8E 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.4);
}

.btn-secondary {
  background: linear-gradient(135deg, #4ECDC4 0%, #6ED5CE 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(78, 205, 196, 0.3);
}

.btn-outline {
  background: transparent;
  color: #FF6B6B;
  border: 2rpx solid #FF6B6B;
}

.btn-outline:active {
  background-color: #FF6B6B;
  color: #FFFFFF;
}

.btn-small {
  height: 60rpx;
  padding: 0 24rpx;
  font-size: 24rpx;
}

.btn-medium {
  height: 80rpx;
  padding: 0 32rpx;
  font-size: 28rpx;
}

.btn-large {
  height: 100rpx;
  padding: 0 40rpx;
  font-size: 32rpx;
}

.btn-block {
  width: 100%;
}

.btn-disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

/* === 文本样式 === */
.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2C3E50;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 28rpx;
  font-weight: 500;
  color: #2C3E50;
  margin-bottom: 8rpx;
}

.text-small {
  font-size: 24rpx;
  color: #7F8C8D;
}

.text-medium {
  font-size: 28rpx;
  color: #2C3E50;
}

.text-large {
  font-size: 32rpx;
  color: #2C3E50;
}

.text-bold {
  font-weight: 600;
}

.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text-ellipsis-2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* === 间距样式 === */
.margin-none { margin: 0; }
.margin-small { margin: 12rpx; }
.margin-medium { margin: 20rpx; }
.margin-large { margin: 32rpx; }

.padding-none { padding: 0; }
.padding-small { padding: 12rpx; }
.padding-medium { padding: 20rpx; }
.padding-large { padding: 32rpx; }

.margin-top-small { margin-top: 12rpx; }
.margin-top-medium { margin-top: 20rpx; }
.margin-top-large { margin-top: 32rpx; }

.margin-bottom-small { margin-bottom: 12rpx; }
.margin-bottom-medium { margin-bottom: 20rpx; }
.margin-bottom-large { margin-bottom: 32rpx; }

/* === 图片样式 === */
.image-round {
  border-radius: 50%;
  overflow: hidden;
}

.image-radius {
  border-radius: 8rpx;
  overflow: hidden;
}

/* === 分割线 === */
.divider {
  height: 1rpx;
  background-color: #E5E5E5;
  margin: 20rpx 0;
}

.divider-thick {
  height: 12rpx;
  background-color: #F0F0F0;
  margin: 20rpx 0;
}

/* === 标签样式 === */
.tag {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.tag-primary {
  background-color: rgba(255, 107, 107, 0.1);
  color: #FF6B6B;
}

.tag-secondary {
  background-color: rgba(78, 205, 196, 0.1);
  color: #4ECDC4;
}

.tag-accent {
  background-color: rgba(255, 217, 61, 0.2);
  color: #E6A700;
}

.tag-gray {
  background-color: #F0F0F0;
  color: #7F8C8D;
}

/* === 加载状态 === */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  color: #7F8C8D;
  font-size: 28rpx;
}

.loading-text {
  margin-left: 12rpx;
}

/* === 空状态 === */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  color: #7F8C8D;
}

.empty-icon {
  font-size: 120rpx;
  color: #E5E5E5;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  text-align: center;
}

/* === 头部安全区域 === */
.safe-area-top {
  padding-top: env(safe-area-inset-top);
}

/* === 底部安全区域 === */
.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}

/* === 动画效果 === */
.fade-in {
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.slide-up {
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* === 浮动操作按钮 === */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E8E 100%);
  color: #FFFFFF;
  font-size: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 107, 0.4);
  z-index: 100;
}

.fab:active {
  transform: scale(0.95);
} 